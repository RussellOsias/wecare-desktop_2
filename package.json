{
  "name": "wecare-desktop",
  "version": "1.0.0",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "watch": "nodemon --exec electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-reloader": "^1.2.3",
    "nodemon": "^3.1.0"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.5.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.9.0"
  },
  "build": {
    "appId": "com.wecare.officer",
    "productName": "WeCare Officer",
    "directories": {
      "output": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "resources/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "resources/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "resources/icons/icon.png"
    }
  }
}
